<div class="navbar bg-base-100">
  <div class="flex-1">
    <%= link_to 'Sosial', root_path, class: 'btn btn-ghost text-xl' %>
  </div>
  <div class="flex-none gap-2">
    <div class="form-control">
      <input type="text" placeholder="Search" class="w-24 input input-bordered md:w-auto"/>
    </div>
    <div class="dropdown dropdown-end">
      <% if user_signed_in? %>
        <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
          <div class="w-10 rounded-full">
            <%= image_tag current_user.avatar.variant(:thumb) if current_user.avatar.attached? %>
          </div>
        </div>
        <ul tabindex="0" class="mt-3 z-[1] p-2 shadow menu menu-sm dropdown-content bg-base-100 rounded-box w-52">
          <li>
            <a class="justify-between">
              Profile
              <span class="badge">New</span>
            </a>
          </li>
          <li><a>Settings</a></li>
          <li> <%= link_to "Sign out", destroy_user_session_path, data: { "turbo-method": :delete } %></li>
        </ul>
      <% else %>
        <%= link_to "Sign in", new_user_session_path, class: "p-3 text-lg rounded-md hover:bg-red-700 hover:text-white" %>
      <% end %>
    </div>
  </div>
</div>
